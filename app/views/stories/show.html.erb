<p id="notice"><%= notice %></p>
<%= link_to image_tag(@story.image.url(:med)), @story.image.url %>
<p>
  <strong>Name:</strong>
  <%= @story.name %>
</p>

<p>
  <strong>Descripton:</strong>
  <%= @story.descripton %>
</p>

<p>
  <strong>Author:</strong>
  <%= @story.author %>
</p>
<% @story.chaps.each do |chap| %>
  <p><%= link_to chap.name, story_chap_path(@story, chap.id) %></p>
<% end %>
<%= link_to 'Add new chap', new_story_chap_path(@story) %><br>
<%= link_to 'Edit', edit_story_path(@story) %> |
<%= link_to 'Back', stories_path %>
